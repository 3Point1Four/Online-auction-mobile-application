<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyitem">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:background="@drawable/i8"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/buy_price"
            android:layout_width="126dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="202dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/buy_yourbid"
            android:layout_width="168dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#3EE6FA"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/buy_name"
            android:layout_width="118dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="27dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_productid"
            android:layout_width="128dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="107dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_sellerid"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="286dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_currbid"
            android:layout_width="183dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="214dp"
            android:layout_marginTop="365dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_bidder"
            android:layout_width="183dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="361dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_user9"
            android:layout_width="183dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="451dp"
            android:text="Enter your Bid:"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/buy_buynow"
            android:layout_width="183dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="207dp"
            android:layout_marginTop="288dp"
            android:textColor="#3EE6FA"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/pro_image"
            android:layout_width="245dp"
            android:layout_height="244dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/BID"
            android:layout_width="123dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="133dp"
            android:layout_marginBottom="7dp"
            android:text="BID" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>